<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.Activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_a">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6sp"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10sp"
                            app:cardElevation="4sp"
                            app:cardBackgroundColor="@color/yellow_700">

                            <TextView
                                android:id="@+id/btn_daily_rides"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="15sp"
                                android:text="Daily Rides"
                                android:textColor="@color/white"
                                android:textSize="24sp"
                                android:textStyle="bold"/>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6sp"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10sp"
                            app:cardElevation="4sp"
                            app:cardBackgroundColor="@color/yellow_700">


                            <TextView
                                android:id="@+id/btn_outstation_booking"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="15sp"
                                android:text="Outstation Booking"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="24sp" />

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6sp"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10sp"
                            app:cardElevation="4sp"
                            app:cardBackgroundColor="@color/yellow_700">

                            <TextView
                                android:id="@+id/btn_rentals"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="15sp"
                                android:text="Rentals"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="24sp" />


                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6sp"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10sp"
                            app:cardElevation="4sp"
                            app:cardBackgroundColor="@color/yellow_700">

                            <TextView
                                android:id="@+id/btn_bus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="15sp"
                                android:text="BUS"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:textSize="24sp" />

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6sp"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10sp"
                            app:cardElevation="4sp"
                            app:cardBackgroundColor="@color/yellow_700">

                            <TextView
                                android:id="@+id/btn_truck"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="15sp"
                                android:text="Truck"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:textSize="24sp" />

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>